<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nav.notifications.NotificationTraveller"
    android:scrollbars="none"
    android:background="#DEE1DD">

    <RelativeLayout
        android:id="@+id/relativeNotif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/btn_Safety_Notice1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="#DEE1DD"
            android:drawableRight="@drawable/nexxt"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Safety Notice"
            android:textSize="@dimen/_15sdp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_Travel_Tips1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_Safety_Notice1"
            android:layout_marginTop="3dp"
            android:background="#DEE1DD"
            android:drawableRight="@drawable/nexxt"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Travel Tips "
            android:textSize="@dimen/_15sdp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_Travel_Offers1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_Travel_Tips1"
            android:layout_marginTop="4dp"
            android:background="#DEE1DD"
            android:drawableRight="@drawable/nexxt"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Travel Offers"
            android:textSize="@dimen/_15sdp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_Whats_new1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_Travel_Offers1"
            android:layout_marginTop="3dp"
            android:background="#DEE1DD"
            android:drawableRight="@drawable/nexxt"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="What's New"
            android:textSize="@dimen/_15sdp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black" />


    </RelativeLayout>

</ScrollView>