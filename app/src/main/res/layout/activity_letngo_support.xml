<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context=".letngo_support">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#dddddd">

            <!--back-->

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/round_back_btn"
                android:backgroundTint="@color/colorPrimary"
                android:paddingStart="35dp"
                android:paddingEnd="30dp"
                android:src="@drawable/white_back_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="1dp"
            android:text="@string/you_are_three"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="@string/away_from_your"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="@string/getaway"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/line_view1"
            android:layout_width="330dp"
            android:layout_height="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#808080" />

        <!--Start exploring-->

        <TextView
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:text="@string/one_start_exploring"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="1dp"
            android:text="@string/start_exploring_start"
            android:textAlignment="inherit"
            android:textColor="#515151"
            android:textSize="14sp"
            android:textStyle="normal" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_34sdp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="330dp"
            android:layout_height="190dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/moving_one"
            tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line_view2"
            android:layout_width="330dp"
            android:layout_height="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#808080" />

        <!--Payment Process-->

        <TextView
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:text="@string/two_payment_process"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="90dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="@string/payment_process_once"
            android:textColor="#515151"
            android:textSize="14sp"
            android:textStyle="normal" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_34sdp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="330dp"
            android:layout_height="190dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/moving_two"
            tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line_view3"
            android:layout_width="330dp"
            android:layout_height="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#808080" />

        <!--Booking-->

        <TextView
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:text="@string/three_booking"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="@string/booking_you_are_all"
            android:textAlignment="inherit"
            android:textColor="#515151"
            android:textSize="15sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/line_view"
            android:layout_width="330dp"
            android:layout_height="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="20dp"
            android:background="#808080" />

        <Button
            android:id="@+id/nextStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/hosting_final"
            android:backgroundTint="#81b08d"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</ScrollView>