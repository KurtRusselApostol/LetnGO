<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context="nav.account.letngo_support2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#dddddd">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#dddddd">

            <!--back-->

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/round_back_btn"
                android:backgroundTint="@color/colorPrimary"
                android:paddingStart="35dp"
                android:paddingEnd="30dp"
                android:src="@drawable/white_back_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="811dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/wherever_you"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/we_are_here"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/health_and_safety_is"
                android:textColor="#515151"
                android:textSize="13sp"
                android:textStyle="normal" />

            <!--health and safety-->

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="120dp"
                app:srcCompat="@drawable/insurance"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="120dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/health_and_safety"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--more cancellation options-->

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="250dp"
                app:srcCompat="@drawable/choose"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="250dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/more_cancellation_options"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="280dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/more_cancellation_options_hosts"
                android:textColor="#515151"
                android:textSize="13sp"
                android:textStyle="normal" />

            <!--support anytime-->

            <ImageView
                android:id="@+id/insurance"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="380dp"
                app:srcCompat="@drawable/agent1"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="380dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/support_anytime"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/support_anytime_with"
                android:textColor="#515151"
                android:textSize="13sp"
                android:textStyle="normal" />


            <TextView
                android:layout_width="310dp"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="495dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/need_to_get"
                android:textAlignment="inherit"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="525dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/our_support_team"
                android:textAlignment="inherit"
                android:textColor="#515151"
                android:textSize="14sp"
                android:textStyle="normal" />

            <!--Contact us-->

            <Button
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="575dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/round_type"
                android:backgroundTint="#4b4b4b"
                android:src="@drawable/white_back_btn"
                android:text="@string/contact"
                android:textAlignment="inherit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:ignore="ContentDescription,MissingConstraints,SpeakableTextPresentCheck" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>